<h1>Create New User</h1>

<%= form_for @user do |form| %>

  Name: <%= form.text_field :first_name, class: "newForm", placeholder: "First Name"  %>
  Last Name: <%= form.text_field :last_name, class: "newForm", placeholder: "Last Name" %>
  Email: <%= form.text_field :email, class: "newForm", placeholder: "user@example.com" %>
  Passsword: <%= form.password_field :password, class: "newForm", placeholder: "password" %>
  Confirmation: <%= form.password_field :password_confirmation, class: "newForm", placeholder: "Confirm password" %>
  <%= form.submit "Sign Up" %>

<% end %>
